<header class="page-header">
   <nav class = "navbar navbar-default" role = "navigation">
      <div class="container">
          <%= render 'layouts/auth' %>
         <div class = "navbar-header">
            <button type = "button" class = "navbar-toggle" 
                    data-toggle = "collapse" data-target = "#example-navbar-collapse">
              <span class = "sr-only">Toggle navigation</span>
              <span class = "icon-bar"></span>
              <span class = "icon-bar"></span>
              <span class = "icon-bar"></span>
            </button>
            <%= link_to("Taco Truck Tracker", root_path , class: "navbar-brand") %>
            </div>
            <div class = "collapse navbar-collapse pull-right" id = "example-navbar-collapse">
              <ul class = "nav navbar-nav">
                <li><%= link_to "Home", root_path, class: 'navbar-text', 'data-no-turbolink' => true %></li>
                <li><%= link_to("About", about_path , class: 'navbar-text') %></li>
                <li><%= link_to("Contact", contact_path , class: 'navbar-text') %></li>
                <% if logged_in? %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      Account <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Profile", current_user %></li>
                      <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                      <li class="divider"></li>
                      <li>
                        <%= link_to "Log out", logout_path, method: "delete" %>
                      </li>
                    </ul>
                  </li>
                <% elsif vendor_logged_in? %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      Account <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Profile", current_vendor %></li>
                      <li><%= link_to "Settings", edit_vendor_path(current_vendor) %></li>
                      <li class="divider"></li>
                      <li>
                        <%= link_to "Log out", vendor_logout_path, method: "delete" %>
                      </li>
                    </ul>
                  </li>  
                <% else %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      Log in <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Diner Login", login_path %></li>
                      <li><%= link_to "Vendor Login", vendor_login_path %></li>
                    </ul>
                  </li>  
                <% end %>
              </ul>
         </div> 
      </div>
   </nav>
</header>