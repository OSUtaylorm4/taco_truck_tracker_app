<% provide(:title, @vendor.username) %>
<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @vendor.image.blank? %>
          <%= gravatar_for @vendor %>
        <% else %>
          <%= image_tag @vendor.image_url %>
        <% end %>
        <%= @vendor.username %>
      </h1>
    </section>
  </aside>
  <div class="col-md-4">
  	menu
  </div>
  <div class="col-md-4">
  	menu
  </div>
</div>
<div class="row">
	<aside class="col-md-4">
		<div id="geolocation" style='width: 300px; height: 300px;'></div>
	</aside>
	<div class="col-md-4">
		<%= link_to "Write a Review", new_vendor_review_path(@vendor), class: "btn btn-primary" %>
	</div>
	<div class="col-md-4">
    <% if @reviews.blank? %>
      <h3> Be the first to write a review!</h3>
    <% else %>
      <% @reviews.each do |review| %>
        <div class="star-rating" data-score= <%= review.rating %> ></div>
        <p><%= review.comment %></p>
      <% end %>
    <% end %>



	</div>
</div>


<script type="text/javascript">
  var handler = Gmaps.build('Google');
handler.buildMap({ internal: {id: 'geolocation'} }, function(){
  if(navigator.geolocation)
    navigator.geolocation.getCurrentPosition(displayOnMap);
});

function displayOnMap(position){
  var marker = handler.addMarker({
    lat: position.coords.latitude,
    lng: position.coords.longitude
  });
  handler.map.centerOn(marker);
};
</script>
<script>
  $('.star-rating').raty({
    path: 'https://s3-us-west-2.amazonaws.com/taco-truck-tracker-app/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>